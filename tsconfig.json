{
  "compilerOptions": {
    "target": "es2016",
    "lib": [
      "dom",
      "esnext"
    ],
    "jsx": "react-native",
    "module": "commonjs",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "extends": "expo/tsconfig.base"
}
